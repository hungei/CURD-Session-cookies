<%- include('../partials/header') %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Suppliers</h3>
  <a href="/suppliers/new" class="btn btn-primary">Add Supplier</a>
</div>
<table class="table table-hover">
  <thead><tr><th>Name</th><th>Address</th><th>Phone</th><th>Created At</th><th>Actions</th></tr></thead>
  <tbody>
    <% suppliers.forEach(s=>{ %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.address || 'N/A' %></td>
        <td><%= s.phone || 'N/A' %></td>
        <td><%= s.createdAt ? s.createdAt.toLocaleDateString() : 'N/A' %></td>
        <td>
          <a href="/suppliers/edit/<%= s._id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/suppliers/delete/<%= s._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>