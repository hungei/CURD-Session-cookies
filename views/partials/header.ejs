<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= typeof title !== 'undefined' ? title : 'Shop' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container">
    <a class="navbar-brand" href="/">Shop</a>
    <div>
      <a class="btn btn-outline-light me-2" href="/suppliers">Suppliers</a>
      <a class="btn btn-outline-light me-2" href="/products">Products</a>
      <% if (!currentUser) { %>
        <a class="btn btn-light" href="/login">Login</a>
      <% } else { %>
        <span class="text-white me-2">Hello <%= currentUser.username %></span>
        <form method="POST" action="/logout" style="display:inline">
          <button class="btn btn-danger">Logout</button>
        </form>
      <% } %>
    </div>
  </div>
</nav>
<div class="container">
